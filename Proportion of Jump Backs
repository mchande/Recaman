def recaman(n):
  seq = []
  for i in range(n):
    if(i == 0): x = 0
    else: x = seq[i-1]-i
    if(x>=0 and x not in seq): seq+=[x]
    else: seq+=[seq[i-1]+i]
  return seq

def recdec(n):
  count = 0
  recarray = recaman(n)
  for i in range(len(recarray)-1):
    if(recarray[i] > recarray[i+1]):
      count = count + 1
    else: count = count + 0
  return count/n
