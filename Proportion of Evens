def recaman(n):
  seq = []
  for i in range(n):
    if(i == 0): x = 0
    else: x = seq[i-1]-i
    if(x>=0 and x not in seq): seq+=[x]
    else: seq+=[seq[i-1]+i]
  return seq
  
def recevens(n):
  count = 0
  recarray = recaman(n)
  for r in recarray:
    if (r%2==0): count = count +1
    else: count = count + 0
  return count/n

def recevenstocsv(n):
  evens = []
  for v in range(n):
    evens.append(recevens(v))
  numpy_data = np.array(evens)    
  df = pd.DataFrame(data=numpy_data, columns=["Proportion of Even Terms"])
  df.to_csv(r'C:\Users\Maya Chande\Documents\Recaman\RecEvens.csv')
  print("success!")
