import pandas as pd
import numpy as np
def recaman(n):
  seq = []
  for i in range(n):
    if(i == 0): x = 0
    else: x = seq[i-1]-i
    if(x>=0 and x not in seq): seq+=[x]
    else: seq+=[seq[i-1]+i]
  return seq


def recsub(n):
  recsub = []
  recarray = recaman(n)
  for i in range(len(recarray)-1):
    recsub.append((recarray[i+1])-(recarray[i]))
  return recsub

#allow export to csv
def recsubtocsv(n):
  numpy_data = np.array(recsub(n))    
  df = pd.DataFrame(data=numpy_data)
  df.to_csv(r'C:\Users\Maya Chande\Documents\Recaman\RecSubDiv.csv')
  print("success!")
  
  
    
