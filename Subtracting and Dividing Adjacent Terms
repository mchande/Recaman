import pandas as pd
import numpy as np
def recaman(n):
  seq = []
  for i in range(n):
    if(i == 0): x = 0
    else: x = seq[i-1]-i
    if(x>=0 and x not in seq): seq+=[x]
    else: seq+=[seq[i-1]+i]
  return seq


def recsub(n):
  recsub = []
  recarray = recaman(n)
  for i in range(len(recarray)-1):
    recsub.append((recarray[i+1])-(recarray[i]))
  return recsub
  
  
def recdiv(n):
  recdiv = []
  recarray = recaman(n)
  for i in range(len(recarray)-1):
    if(i==0): recdiv.append(0)
    else: recdiv.append((recarray[i+1])/(recarray[i]))
  return recdiv

#allow export to csv
def recsubtocsv(n):
  grid = np.array(recsub(0), recdiv(0))
  for v in range(1, n):
    numpy_sub = np.array(recsub(v), recdiv(v))
    grid = np.vstack([grid, numpy_sub])    
  df = pd.DataFrame(data=grid, columns=["Subtracting Adjacent Terms", "Dividing Adjacent Terms"])
  df.to_csv(r'C:\Users\Maya Chande\Documents\Recaman\RecSubDiv.csv')
  print("success!")
  
  
    
